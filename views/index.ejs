<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs');%>
        <title>Time Square Blogs</title>
        <%- include('./partials/stylesheetLink.ejs');%>
            <link rel="stylesheet" href="css/style.css">
</head>

<body>

    <div class="bg-gray-100 flex flex-row sm:flex-col justify-evenly items-center min-h-screen">
        <div class=""><img class="rounded-full w-1/3" src="/img/poster.jpg"></div>
        <div class="text-left w-1/2">
            <h1 class="headerFont my-8 text-6xl text-gray-800 font-normal">TIME SQUARE BLOGS</h1>
            <p class="text-2xl text-gray-500 txtFont mx-auto">Lorem ipsum, dolor sit amet consectetur
                adipisicing elit.
                Beatae corrupti nemo impedit, veritatis vel dolorem quis, rerum est molestiae commodi.</p>
        </div>
    </div>


    <div class="flex flex-col justify-center bg-gray-50 py-16">

        <h2 class="pb-9 interFont font-semibold text-5xl text-center text-gray-700">Latest Posts</h2>

        <div class="flex flex-row justify-center items-baseline">

            <% postsJsonData.forEach(element=> { %>
                <div class="flex flex-col m-4 w-1/4 shadow-xl overflow-hidden rounded-md">
                    <div class="h-52 bg-red">
                        <img src="">
                    </div>
                    <div class="flex flex-col p-4 bg-skin max-h-96">
                        <a href="/<%= (element.postId) %>"
                            class="border-l-4 pl-5 py-2 text-red border-red interFont text-2xl hover:text-gray-600 duration-200">
                            <%= element.postName %>
                        </a>
                        <p class="text-lg interFont mt-3"><i class="fa fa-clock opacity-50 mr-3"></i>
                            <%= element.updatedDate %>
                        </p>
                        <p class="text-lg interFont mt-2 bg-red text-white w-min py-2 px-4 rounded">#<%= element.hashTag
                                %>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>

    </div>

    <%- include('./partials/subscribe.ejs');%>



</body>

</html>